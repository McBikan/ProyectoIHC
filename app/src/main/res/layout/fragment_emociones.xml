<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_oscuro"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Botón hamburguesa -->
        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/menu_burger"
            android:tint="@color/fondo_claro"
            android:layout_gravity="start"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp" />

        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_white">

            <!-- Imagen del bot dentro del círculo -->
            <ImageView
                android:id="@+id/ivBot"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:src="@drawable/robot_1"
                android:layout_gravity="center"
                android:translationX="-10dp" /> <!-- solo el bot se mueve -->

        </FrameLayout>

        <!-- ISAIA -->
        <TextView
            android:id="@+id/tvIsaia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISAIA"
            android:fontFamily="@font/convergence"
            android:textSize="60sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="40dp" />

        <!-- DETECCIÓN DE EMOCIONES -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETECCIÓN DE\nEMOCIONES"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Texto explicativo -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USA EL MICRÓFONO,\nY DETECTAREMOS TU\nESTADO EMOCIONAL"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Botón de micrófono -->
        <ImageButton
            android:id="@+id/btnMicrofono"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/microfono_circular"
            android:backgroundTint="@color/fondo_claro"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
