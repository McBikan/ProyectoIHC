<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnReturn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_return"
                android:layout_gravity="top|end"
                app:tint="@color/primary_blue" />

            <!-- Título -->
            <TextView
                android:id="@+id/tvTituloMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SISTEMA DE APOYO"
                android:fontFamily="@font/convergence"
                android:textColor="@color/morado_fuerte"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp" />

            <!-- INICIO -->
            <LinearLayout
                android:id="@+id/opcionInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicio"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- Evaluación Psicológica -->
            <LinearLayout
                android:id="@+id/opcionEvaluacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_psychology" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evaluación Psicológica"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- HISTORIAL -->
            <LinearLayout
                android:id="@+id/opcionHistorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_history" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historial"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- INTERACCIÓN POR VOZ -->
            <LinearLayout
                android:id="@+id/opcionInteraccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_mic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Interacción por voz"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- FRASES MOTIVADORAS -->
            <LinearLayout
                android:id="@+id/opcionFrases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_quote" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frases Motivadoras"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- FRASES MOTIVADORAS -->
            <LinearLayout
                android:id="@+id/opcionEmocion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/buscar_emocion"
                    android:tint = "@color/morado_fuerte"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detección de emociones"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- DETECCIÓN DE CRISIS EMOCIONALES -->
            <LinearLayout
                android:id="@+id/opcionCrisis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_warning" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detección de Crisis Emocionales"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Botón Salir pegado al fondo -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSalir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_con_borde"
        android:text="SALIR"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:drawableStart="@drawable/logout"
        android:padding="12dp"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>
</LinearLayout>
